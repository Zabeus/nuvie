name: Sub And Loop Test
invocation: kow
reagents: 0x00
script:\
" _newline +++ _newline " _display\
5 5 _random _add 0 :do\
back _over sub _jmp :back\
:loop 1 _add _over _over _sub do _swap _jmptrue\
" _newline --- _newline " _display  _end\
:sub " _swap _newline " _display _jmp
