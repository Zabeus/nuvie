# 13
name: Save Spell
invocation: sow
reagents: 0x00
script:\
" Save by index (y/n)? " _display _input \
 _jmp \
:y \
" Circle: " _display _input \
1 _sub 16 _mul \
" Slot: " _display _input \
_add \ 
_save_spell \
_end \
:n\
" Invocation: " _display _input \
_inv_to_spell \
_jmp \
:success \
_save_spell \
_end \
:failure \
" Spell Not Found " \
_display \
_end
